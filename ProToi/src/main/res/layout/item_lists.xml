<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewLists"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewLists"
        android:layout_toEndOf="@+id/imageViewLists"
        android:layout_toRightOf="@+id/imageViewLists"
        android:text="Large Text"
        android:textColor="#000"
        android:layout_marginLeft="15dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:text="New Text" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarList"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageViewLists"
        android:layout_alignEnd="@+id/imageViewLists"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

</RelativeLayout>